CREATE TABLE usuario (
    id_usuario INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
    nombre varchar(300) NOT NULL,
    edad INT NOT NULL,
    email varchar(500),
    telefono INT(11) NOT NULL,
    tipoDoc varchar (200) NOT NULL,
    numDoc varchar(200) NOT NULL,
    estadoCivil varchar(100),
    genero varchar(300) NOT NULL,
    empleo varchar(200),
    ciudad varchar(200)NOT NULL,
    estatura INT NOT NULL    
);

CREATE TABLE roles (
    id_rol INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
    nomRol varchar(300) NOT NULL,
    actor varchar(200)
);

CREATE TABLE libro (
    id_libro INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
    nomLib varchar(400) NOT NULL,
    genero_libro varchar(300),
    autor varchar(200) NOT NULL,
    estanteria INT NOT NULL
);

